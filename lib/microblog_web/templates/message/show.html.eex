<h2>Show Message</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @message.title %>
  </li>

  <li>
    <strong>Content:</strong>
    <%= @message.content %>
  </li>

  <li>
    <strong>Author:</strong>
    <%= @message.author %>
  </li>

</ul>

<span><%= link "Edit", to: message_path(@conn, :edit, @message) %></span>
<span><%= link "Back", to: message_path(@conn, :index) %></span>
